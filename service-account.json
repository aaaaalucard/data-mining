
{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/aaaaalucard/data-mining/master/service-account#",
  "description": "The request object for creating a service account object",
  "type": "object",
  "properties": {
    "service_accounts": {
      "type": "object",
      "properties": {
        "account_id": {
          "description": "A permanent, case-sensitive account identifier (e.g. X1 service account ID or Auth GUID)",
          "type": "string",
          "minLength": 1
        },
        "provider": {
          "description": "The identity provider or partner (e.g. Comcast)",
          "type": "string",
          "minLength": 1
        },
        "account_number": {
          "description": "An (optional) account number",
          "type": "string",
          "minLength": 1
        },
        "links": {
          "description": "The object that contains references/links/IDs to other objects",
          "type": "object",
          "properties": {
            "datasets": {
              "description": "List of dataset IDs",
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          }
        }
      },
      "required": [
        "account_id",
        "provider"
      ]
    }
  },
  "required": [
    "service_accounts"
  ]
}
